{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./s", // Root directory for TypeScript source files
    "esModuleInterop": true, // Enable interoperability for CommonJS and ES modules
    "declaration": true, // Generate declaration files (.d.ts)
    "resolveJsonModule": true, // Allow importing JSON modules
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src"], // Files to include in compilation
  "exclude": ["node_modules", "dist"] // Files to exclude from compilation
}
